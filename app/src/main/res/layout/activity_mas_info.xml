<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    android:padding="16dp"
    tools:context=".MasInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/arima_madurai"
            android:gravity="center"
            android:padding="10dp"
            android:text="MÁS INFORMACIÓN"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/tel_icon"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/restauranteTel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/arima_madurai"
            android:gravity="center"
            android:text="Contacto"
            android:textColor="@color/pink"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arima_madurai"
            android:gravity="center"
            android:text="562452454"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/restauranteHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/arima_madurai"
            android:gravity="center"
            android:text="Horario reservas"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arima_madurai"
            android:gravity="center"
            android:text="L-V 12:00-16:00
S-D 12:00-17:00"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/restauranteDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/arima_madurai"
            android:gravity="center"
            android:text="Localización"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arima_madurai"
            android:gravity="center"
            android:text="Calle de la piruleta, 5"
            android:textColor="@color/black"
            android:textSize="18sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>