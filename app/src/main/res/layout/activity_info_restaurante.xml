<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_info"
    tools:context=".InfoRestauranteActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/restaurantImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="20dp"
                app:shapeAppearanceOverlay="@style/CustomShapeAppearance"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp" />

            <TextView
                android:id="@+id/restaurantTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/arima_madurai"
                android:text="Título del restaurante"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/restaurantLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/estrella"
                android:fontFamily="@font/arima_madurai"
                android:text="5.2"
                android:gravity="center_vertical"
                android:textColor="@color/green"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/titleDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/arima_madurai"
                android:text="Descripción"
                android:textColor="@color/pink"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/restaurantDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/arima_madurai"
                android:inputType="textMultiLine"
                android:maxLines="20"
                android:text="Breve descripción del restaurante
hskjdhkhajshkhsjdkasjdhkhjakhdhaskjhjdhhdkajshdkks
ashdhakdhksdkadh
dhakshdaksdhj
hdsakdk
hdsakkadhsjhdkj
kgkgkjgkgk
gkgkhgkg
ggkgkgkgjgkgkgk
gkhgkgkjhhgkgkj
gkkghggkkghghgkhkgggkggkggkgkggkgkkggkkkgkkggkkgg

"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/restaurantMenuLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Link al menú"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/commentsButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/pink"
                    android:fontFamily="@font/arima_madurai"
                    android:text="Comentarios"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/moreInfoButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/pink"
                    android:fontFamily="@font/arima_madurai"
                    android:text="Más información"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>